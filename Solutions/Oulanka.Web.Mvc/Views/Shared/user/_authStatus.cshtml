
@if (Request.IsAuthenticated)
{

    <li class="user user-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="~/content/images/user_pic.png" alt="userpic"
                 class="user-image" />
            <span class="hidden-xs">
                @User.Identity.Name
            </span>
        </a>
        <ul class="dropdown-menu">
            <li class="user-header">
                <img src="~/content/images/user_pic.png" alt="userpic"
                     class="img-circle" />
                <p>
                    @User.Identity.Name;
                    <small>Group - membership</small>
                </p>
            </li>
            <li class="user-footer">
                <div class="pull-left">
                    <a href="@Url.Action("index","profile")" class="btn btn-default btn-flat">Perfil</a>
                </div>
                <div class="pull-right">
                    @using (Html.BeginRouteForm("logoff", FormMethod.Post, new { id = "logoutForm", @class = "navbar-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Salir</a>
                    }
                </div>
            </li>
        </ul>
    </li>

}
