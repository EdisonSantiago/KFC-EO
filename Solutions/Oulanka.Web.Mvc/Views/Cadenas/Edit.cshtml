@model CadenaFormModel

@{
    ViewBag.PageTitle = "Editar Cadena";
    ViewBag.PageDescription = "Ubique los datos a modificar de la nueva Cadena";
    ViewBag.Title = "Editar Cadena";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("edit", "cadenas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default bg-gray-light">
                <div class="panel-body">

                    <div class="form-group">
                        @Html.LabelFor(m => m.Nombre)
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre de la Cadena" })
                        @Html.ValidationMessageFor(m => m.Nombre)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Descripcion)
                        @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", placeholder = "Descripción" })
                        @Html.ValidationMessageFor(m => m.Descripcion)
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="row">
                                <div class="col-md-8 col-sm-8">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Logo)
                                        <input type="file" name="Logo" id="logo" class="form-control upload-file" />
                                        @Html.ValidationMessageFor(m => m.Logo)
                                    </div>
                                </div>                                
                                <div class="col-md-4 col-sm-4">
                                    @if (!string.IsNullOrEmpty(Model.LogoUrl))
                                    {
                                        <img src="@Model.LogoUrl" width="100" />
                                    }
                                </div>

                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Manual)
                                <input type="file" name="Manual" id="Manual" class="form-control upload-file" />
                                @Html.ValidationMessageFor(m => m.Manual)
                                @if (!string.IsNullOrEmpty(Model.ManualUrl))
                                {
                                    <a href="@Model.ManualUrl" target="_blank" ><i class="fa fa-download"></i> Descargar Manual</a>
                                }

                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FechaFundacion)
                                @Html.EditorFor(m => m.FechaFundacion, new { @class = "form-control  datefield", placeholder = "Fecha de Fundación" })
                                @Html.ValidationMessageFor(m => m.FechaFundacion)
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Estado)
                                @Html.DropDownListFor(m => m.Estado, Model.Estados, "Seleccione Uno", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Estado)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-xs-12">
                            <a class="btn btn-default pull-right"
                               href="@Url.Action("index", "cadenas")">
                                <i class="fa fa-ban"></i>
                                @Html.Resource("form_cancel")
                            </a>
                            <button type="submit" class="btn btn-primary pull-right" style="margin-right: 5px;">
                                <i class="fa fa-save"></i>
                                @Html.Resource("form_save_data")
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div><div class="col-md-4"></div>
    </div>
}
