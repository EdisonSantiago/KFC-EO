@model LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <fieldset class="text-center">
        <legend>Ingrese con su usuario</legend>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.TextBoxFor(model => model.UserName, new {@class = "form-control", placeholder = "nombre de usuario"})
        </div>
        <div class="form-group">
            @Html.PasswordFor(model => model.Password, new {@class = "form-control" , placeholder="contraseña"})
        </div>
        <div class="text-center">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(model => model.RememberMe)
                    Recordarme
                </label>
            </div>
            <input type="submit" value="Ingresar" class="btn btn-default" />

        </div>
    </fieldset>

}

