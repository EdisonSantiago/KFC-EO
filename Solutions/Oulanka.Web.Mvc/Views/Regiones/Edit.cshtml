@model RegionFormModel

@{
    ViewBag.PageTitle = "Editar Region";
    ViewBag.PageDescription = "Ubique los datos a modificar de la Región";
    ViewBag.Title = "Editar Región";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.Id)

    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default bg-gray-light">
                <div class="panel-body">

                    <div class="form-group">
                        @Html.LabelFor(m => m.Nombre)
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre de la Región" })
                        @Html.ValidationMessageFor(m => m.Nombre)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Estado)
                        @Html.DropDownListFor(m => m.Estado, Model.Estados, "Seleccione Uno", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Estado)
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-xs-12">
                            <a class="btn btn-default pull-right"
                               href="@Url.Action("index", "regiones")">
                                <i class="fa fa-ban"></i>
                                @Html.Resource("form_cancel")
                            </a>
                            <button type="submit" class="btn btn-primary pull-right" style="margin-right: 5px;">
                                <i class="fa fa-save"></i>
                                @Html.Resource("form_save_data")
                            </button>

                        </div>
                    </div>
                </div>
            </div>

        </div><div class="col-md-4"></div>
    </div>
}

